---
import Layout from '../../../layouts/Layout.astro';

const operations = [
  {
    category: 'Encoding',
    ops: [
      { id: 'base64', name: 'Base64', desc: 'Encode/decode Base64' },
      { id: 'base32', name: 'Base32', desc: 'Encode/decode Base32' },
      { id: 'base58', name: 'Base58', desc: 'Bitcoin-style Base58' },
      { id: 'hex', name: 'Hex', desc: 'Hexadecimal encoding' },
      { id: 'binary', name: 'Binary', desc: 'Binary (8-bit) encoding' },
      { id: 'ascii85', name: 'ASCII85', desc: 'Adobe ASCII85 encoding' },
      { id: 'url', name: 'URL Encode', desc: 'Percent-encoding for URLs' },
      { id: 'morse', name: 'Morse Code', desc: 'Dots and dashes' },
    ]
  },
  {
    category: 'Classical Ciphers',
    ops: [
      { id: 'caesar', name: 'Caesar Cipher', desc: 'Shift letters by N positions', hasOptions: true },
      { id: 'rot13', name: 'ROT13', desc: 'Caesar with shift of 13' },
      { id: 'atbash', name: 'Atbash', desc: 'Reverse alphabet substitution' },
      { id: 'vigenere', name: 'Vigen√®re', desc: 'Polyalphabetic cipher with keyword', hasOptions: true },
      { id: 'affine', name: 'Affine Cipher', desc: 'Linear transformation cipher', hasOptions: true },
      { id: 'railfence', name: 'Rail Fence', desc: 'Transposition cipher', hasOptions: true },
    ]
  },
  {
    category: 'Modern',
    ops: [
      { id: 'xor', name: 'XOR', desc: 'XOR with key', hasOptions: true },
    ]
  },
  {
    category: 'Utilities',
    ops: [
      { id: 'reverse', name: 'Reverse', desc: 'Reverse string' },
      { id: 'uppercase', name: 'To Uppercase', desc: 'Convert to uppercase' },
      { id: 'lowercase', name: 'To Lowercase', desc: 'Convert to lowercase' },
      { id: 'removewhitespace', name: 'Remove Whitespace', desc: 'Strip all whitespace' },
      { id: 'charcount', name: 'Character Count', desc: 'Count characters' },
    ]
  }
];
---
<Layout title="Cryptography Lab" headingTracker={false}>
  <div class="cyberchef">
    <!-- Operations Panel -->
    <aside class="cyberchef__ops">
      <div class="cyberchef__ops-header">
        <h2 class="mono">Operations</h2>
        <input
          type="search"
          id="op-search"
          class="cyberchef__search mono"
          placeholder="Search..."
          autocomplete="off"
        />
      </div>
      <div class="cyberchef__ops-list" id="ops-list">
        {operations.map(cat => (
          <div class="cyberchef__category" data-category={cat.category}>
            <h3 class="cyberchef__category-title mono">{cat.category}</h3>
            <div class="cyberchef__category-ops">
              {cat.ops.map(op => (
                <button
                  class="cyberchef__op mono"
                  data-op={op.id}
                  data-has-options={op.hasOptions ? 'true' : 'false'}
                  title={op.desc}
                >
                  {op.name}
                </button>
              ))}
            </div>
          </div>
        ))}
      </div>
    </aside>

    <!-- Recipe Panel -->
    <section class="cyberchef__recipe">
      <div class="cyberchef__recipe-header">
        <h2 class="mono">Recipe</h2>
        <div class="cyberchef__recipe-actions">
          <button class="cyberchef__btn mono" id="clear-recipe">Clear</button>
          <button class="cyberchef__btn cyberchef__btn--primary mono" id="bake-btn">BAKE!</button>
        </div>
      </div>
      <div class="cyberchef__recipe-list" id="recipe-list">
        <p class="cyberchef__recipe-empty mono">Click operations to add them here</p>
      </div>
      <label class="cyberchef__auto-bake mono">
        <input type="checkbox" id="auto-bake" checked />
        Auto Bake
      </label>
    </section>

    <!-- Input/Output Panel -->
    <section class="cyberchef__io">
      <div class="cyberchef__input">
        <div class="cyberchef__io-header">
          <h2 class="mono">Input</h2>
          <div class="cyberchef__io-actions">
            <button class="cyberchef__btn mono" id="clear-input">Clear</button>
            <button class="cyberchef__btn mono" id="load-sample">Sample</button>
          </div>
        </div>
        <textarea
          id="input"
          class="cyberchef__textarea mono"
          placeholder="Enter your input here..."
          spellcheck="false"
        ></textarea>
      </div>
      <div class="cyberchef__output">
        <div class="cyberchef__io-header">
          <h2 class="mono">Output</h2>
          <div class="cyberchef__io-actions">
            <button class="cyberchef__btn mono" id="copy-output">Copy</button>
            <button class="cyberchef__btn mono" id="use-as-input">Use as Input</button>
          </div>
        </div>
        <textarea
          id="output"
          class="cyberchef__textarea mono"
          readonly
          placeholder="Output will appear here..."
        ></textarea>
      </div>
    </section>

    <!-- Magic Detection -->
    <aside class="cyberchef__magic" id="magic-panel" hidden>
      <h3 class="mono">Magic Detection</h3>
      <div id="magic-results" class="cyberchef__magic-results"></div>
    </aside>
  </div>
</Layout>

<style>
  .cyberchef {
    display: grid;
    grid-template-columns: 220px 280px 1fr;
    grid-template-rows: 1fr auto;
    gap: 0;
    height: calc(100vh - 60px);
    background: var(--color-bg);
  }

  .cyberchef__ops {
    grid-row: 1 / -1;
    background: var(--surface-raised);
    border-right: 1px solid var(--border-medium);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .cyberchef__ops-header {
    padding: var(--space-3);
    border-bottom: 1px solid var(--border-medium);
  }

  .cyberchef__ops-header h2 {
    font-size: var(--text-11);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-2);
    color: var(--color-muted);
  }

  .cyberchef__search {
    width: 100%;
    padding: var(--space-2);
    background: var(--color-bg);
    border: 1px solid var(--border-medium);
    color: var(--color-text);
    font-size: var(--text-12);
  }

  .cyberchef__search:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .cyberchef__ops-list {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-2);
  }

  .cyberchef__category {
    margin-bottom: var(--space-3);
  }

  .cyberchef__category-title {
    font-size: var(--text-10);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-accent);
    margin-bottom: var(--space-1);
    padding: var(--space-1);
  }

  .cyberchef__category-ops {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .cyberchef__op {
    padding: var(--space-2);
    background: var(--color-bg);
    border: 1px solid var(--border-faint);
    color: var(--color-text);
    text-align: left;
    cursor: pointer;
    font-size: var(--text-11);
    transition: all var(--transition-base);
  }

  .cyberchef__op:hover {
    background: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .cyberchef__op[hidden] {
    display: none;
  }

  .cyberchef__recipe {
    grid-row: 1 / -1;
    background: var(--surface-raised);
    border-right: 1px solid var(--border-medium);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .cyberchef__recipe-header {
    padding: var(--space-3);
    border-bottom: 1px solid var(--border-medium);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .cyberchef__recipe-header h2 {
    font-size: var(--text-11);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted);
  }

  .cyberchef__recipe-actions {
    display: flex;
    gap: var(--space-2);
  }

  .cyberchef__btn {
    padding: var(--space-1) var(--space-2);
    background: var(--color-bg);
    border: 1px solid var(--border-medium);
    color: var(--color-text);
    cursor: pointer;
    font-size: var(--text-10);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all var(--transition-base);
  }

  .cyberchef__btn:hover {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .cyberchef__btn--primary {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
    font-weight: 600;
  }

  .cyberchef__btn--primary:hover {
    background: var(--color-text);
    border-color: var(--color-text);
    color: var(--color-bg);
  }

  .cyberchef__recipe-list {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-2);
    min-height: 200px;
  }

  .cyberchef__recipe-empty {
    color: var(--color-muted);
    font-size: var(--text-11);
    text-align: center;
    padding: var(--space-4);
  }

  .cyberchef__recipe-item {
    background: var(--color-bg);
    border: 1px solid var(--border-medium);
    margin-bottom: var(--space-2);
    padding: var(--space-2);
  }

  .cyberchef__recipe-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-1);
  }

  .cyberchef__recipe-item-name {
    font-size: var(--text-11);
    font-weight: 600;
  }

  .cyberchef__recipe-item-controls {
    display: flex;
    gap: var(--space-1);
  }

  .cyberchef__recipe-item-btn {
    padding: 2px 6px;
    background: transparent;
    border: 1px solid var(--border-faint);
    color: var(--color-muted);
    cursor: pointer;
    font-size: var(--text-10);
  }

  .cyberchef__recipe-item-btn:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .cyberchef__recipe-item-btn--delete:hover {
    color: #c53030;
    border-color: #c53030;
  }

  .cyberchef__recipe-item-options {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    margin-top: var(--space-2);
  }

  .cyberchef__recipe-item-option {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-10);
  }

  .cyberchef__recipe-item-option label {
    min-width: 50px;
    color: var(--color-muted);
  }

  .cyberchef__recipe-item-option input,
  .cyberchef__recipe-item-option select {
    flex: 1;
    padding: var(--space-1);
    background: var(--surface-raised);
    border: 1px solid var(--border-faint);
    color: var(--color-text);
    font-size: var(--text-11);
  }

  .cyberchef__auto-bake {
    padding: var(--space-2) var(--space-3);
    border-top: 1px solid var(--border-medium);
    font-size: var(--text-10);
    color: var(--color-muted);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .cyberchef__io {
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .cyberchef__input,
  .cyberchef__output {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 0;
  }

  .cyberchef__input {
    border-bottom: 1px solid var(--border-medium);
  }

  .cyberchef__io-header {
    padding: var(--space-2) var(--space-3);
    border-bottom: 1px solid var(--border-faint);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--surface-raised);
  }

  .cyberchef__io-header h2 {
    font-size: var(--text-11);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-muted);
  }

  .cyberchef__io-actions {
    display: flex;
    gap: var(--space-2);
  }

  .cyberchef__textarea {
    flex: 1;
    padding: var(--space-3);
    background: var(--color-bg);
    border: none;
    color: var(--color-text);
    font-size: var(--text-12);
    line-height: 1.5;
    resize: none;
  }

  .cyberchef__textarea:focus {
    outline: none;
  }

  .cyberchef__textarea::placeholder {
    color: var(--color-muted);
  }

  .cyberchef__magic {
    grid-column: 3;
    padding: var(--space-3);
    background: var(--surface-raised);
    border-top: 1px solid var(--border-medium);
  }

  .cyberchef__magic h3 {
    font-size: var(--text-10);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: var(--space-2);
  }

  .cyberchef__magic-results {
    font-size: var(--text-11);
    color: var(--color-muted);
  }

  /* Mobile responsive */
  @media (max-width: 900px) {
    .cyberchef {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto 1fr;
      height: auto;
      min-height: 100vh;
    }

    .cyberchef__ops {
      grid-row: auto;
      max-height: 40vh;
      border-right: none;
      border-bottom: 1px solid var(--border-medium);
    }

    .cyberchef__recipe {
      grid-row: auto;
      max-height: 30vh;
      border-right: none;
      border-bottom: 1px solid var(--border-medium);
    }

    .cyberchef__io {
      min-height: 60vh;
    }

    .cyberchef__category-ops {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .cyberchef__op {
      flex: 0 0 auto;
    }
  }
</style>

<script type="module" src="/cryptography.js"></script>
